<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:background="#101010">
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:layout_marginTop="785dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/start"
                android:layout_width="230sp"
                android:layout_height="52sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                android:background="@drawable/button_bg_blue_gradient"
                android:clickable="true"
                android:elevation="10dp"
                android:focusable="true"
                android:text="Start"
                android:fontFamily="@font/m_plus_rounded1c_regular"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/pause"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                android:background="@drawable/button_bg_inactive_gradient"
                android:clickable="true"
                android:elevation="10dp"
                android:layout_marginLeft="10dp"
                android:focusable="true"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/button_bg_red_gradient"
                android:clickable="true"
                android:elevation="10dp"
                android:focusable="true"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/ble"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="right"
            android:layout_marginTop="48dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_bluetooth">

        </Button>

        <Button
            android:id="@+id/menu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/ic_sidebar_menu">
        </Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            app:cardCornerRadius="50dp"
            app:cardElevation="10dp">

            <eightbitlab.com.blurview.BlurView
                android:id="@+id/glass"
                android:layout_width="match_parent"
                android:layout_height="678dp"
                android:background="@drawable/shape_rounded_corner_rectangle"
                android:gravity="center"
                android:paddingLeft="04dp"
                android:paddingTop="04dp"
                android:paddingRight="04dp"
                android:paddingBottom="04dp"
                android:requiresFadingEdge="vertical"
                android:clipToOutline="true">
            </eightbitlab.com.blurview.BlurView>
        </LinearLayout>

    </FrameLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/nav_header"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        android:background="@drawable/shape_inferior_nav_banner"/>
</androidx.drawerlayout.widget.DrawerLayout>