<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/list_dialog_background"
    android:orientation="vertical"
    android:padding="10dp">

    <Button
        android:id="@+id/dismiss_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="end"
        android:contentDescription="Menu"
        android:background="@drawable/ic_close_x"
        android:padding="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deseja cancelar a sessão? Todos os dados relacionadas serão deletados."
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center">
    </TextView>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_auth_screen_separate_line"
        android:layout_margin="16dp"
        android:layout_gravity="center">

    </ImageView>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/list_dialog_background"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center">

    <Space
        android:layout_width="08dp"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/addpaciente"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="Individual"
        android:drawableEnd="@drawable/ic_session_only"
        android:background="@drawable/button_bg_gradient_confirm"
        android:textAllCaps="false"
        android:paddingEnd="16dp"/>

    <Space
        android:layout_width="32dp"
        android:layout_height="08dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="Simultanea"
        android:paddingEnd="16dp"
        android:drawableEnd="@drawable/ic_multiple_pacients"
        android:background="@drawable/ic_not_confirm"
        android:textAllCaps="false"/>

    </LinearLayout>
</LinearLayout>