<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:amdroid="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#101010">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="785dp"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:clipChildren="true"
                android:clipToOutline="true"
                app:cardCornerRadius="28dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_rounded_frame"
                    android:clipChildren="true"
                    android:clipToOutline="true"
                    android:elevation="2dp">

                    <Button
                        android:id="@+id/start"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/m_plus_rounded1c_regular"
                        android:text="@string/start"
                        android:textColor="@color/white"
                        android:textSize="32sp"
                        android:visibility="visible"
                        android:textAllCaps="false"/>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/pause"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/button_bg_inactive_gradient"
                android:clickable="true"
                android:elevation="10dp"
                android:focusable="true"
                android:textSize="30sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/button_bg_delete_session"
                android:clickable="true"
                android:elevation="10dp"
                android:focusable="true"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

        <Button
            android:id="@+id/ble"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_bluetooth">

        </Button>

        <Button
            android:id="@+id/menu"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/ic_sidebar_menu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <eightbitlab.com.blurview.BlurView
                android:layout_width="match_parent"
                android:layout_height="678dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/shape_rounded_corner_rectangle"
                android:gravity="center"
                android:padding="6dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none"
                        android:overScrollMode="never">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <eightbitlab.com.blurview.BlurView
                                android:id="@+id/glass"
                                android:layout_width="match_parent"
                                android:layout_height="420dp"
                                android:background="@drawable/bg_container_gradient"
                                android:clipToOutline="true"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="8dp">

                                    <FisioTracker.Android.OrtoTracker_Graphs.graph_01_speedometer
                                        android:id="@+id/speedView"
                                        android:layout_width="336sp"
                                        android:layout_height="match_parent"
                                        android:elevation="10dp"
                                        app:sv_indicatorColor="@color/cardview_light_background"
                                        app:sv_maxSpeed="30"
                                        app:sv_minSpeed="0"
                                        app:sv_speedTextColor="@color/white"
                                        app:sv_speedTextFormat="FLOAT"
                                        app:sv_speedTextSize="40dp"
                                        app:sv_textColor="@color/white"
                                        app:sv_unit="Kg"
                                        app:sv_unitTextColor="@color/white" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:orientation="vertical"
                                        android:paddingTop="20dp">
                                    <ImageButton
                                        android:id="@+id/huge_pacient"
                                        android:layout_width="156dp"
                                        android:layout_height="156dp"
                                        android:layout_gravity="center"
                                        android:elevation="8dp"
                                        android:background="@drawable/ic_pacient"
                                        android:src="@drawable/bg_pacient_outline"
                                        app:tint="@color/gray" />

                                        <Space
                                            android:layout_width="match_parent"
                                            android:layout_height="8dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Luisa"
                                            android:textColor="@color/white"
                                            android:layout_gravity="center">

                                        </TextView>

                                    </LinearLayout>

                                </FrameLayout>

                                <Button
                                    android:id="@+id/add_pacient"
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:layout_gravity="bottom"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginBottom="20dp"
                                    android:background="@drawable/button_bg_add_pacient"
                                    android:gravity="bottom">

                                </Button>

                                <Button
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:layout_gravity="end|bottom"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="20dp"
                                    android:background="@drawable/button_bg_edit_session_list"
                                    android:gravity="bottom">

                                </Button>

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="1dp"
                                    android:layout_gravity="start|bottom"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginBottom="45dp"
                                    android:background="#404040"
                                    android:contentDescription="@string/linha_que_conecta"
                                    android:paddingBottom="200dp" />

                                <Button
                                    android:id="@+id/new_session_button"
                                    android:layout_width="150dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center|bottom"
                                    android:layout_marginBottom="20dp"
                                    android:background="@drawable/button_bg_blue_gradient"
                                    android:drawableEnd="@drawable/ic_lock_button"
                                    android:fontFamily="@font/m_plus_rounded1c_regular"
                                    android:gravity="center"
                                    android:paddingEnd="04dp"
                                    android:text="Nova Sessão"
                                    android:textAlignment="center"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white" />

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="1dp"
                                    android:layout_gravity="end|bottom"
                                    android:layout_marginEnd="20dp"
                                    android:layout_marginBottom="45dp"
                                    android:background="#404040"
                                    android:paddingBottom="200dp" />

                            </eightbitlab.com.blurview.BlurView>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="8dp" />

                            <eightbitlab.com.blurview.BlurView
                                android:id="@+id/glass2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:background="@drawable/bg_container_gradient"
                                android:clipToOutline="true"
                                android:elevation="2sp"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:orientation="vertical"
                                    android:paddingBottom="08dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="8dp"
                                        android:gravity="center_horizontal"
                                        android:paddingTop="35dp">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:gravity="center">
                                            <ImageButton
                                                android:id="@+id/button_pacient_1"
                                                android:layout_width="50dp"
                                                android:layout_height="50dp"
                                                android:background="@drawable/pacient_button1"
                                                android:contentDescription="@string/pacient_1"
                                                android:src="@drawable/bg_pacient_outline"
                                                app:tint="@color/gray" />
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Luisa"
                                                android:textColor="@color/white"
                                                android:fontFamily="@font/m_plus_rounded_1c_thin">
                                            </TextView>
                                        </LinearLayout>

                                        <Space
                                            android:layout_width="16dp"
                                            android:layout_height="wrap_content" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:gravity="center">
                                            <ImageButton
                                                android:id="@+id/button_pacient_2"
                                                android:layout_width="50dp"
                                                android:layout_height="50dp"
                                                android:background="@drawable/pacient_button1"
                                                android:contentDescription="@string/pacient_1"
                                                android:src="@drawable/bg_pacient_outline"
                                                app:tint="@color/gray" />
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Otavio"
                                                android:textColor="@color/white"
                                                android:fontFamily="@font/m_plus_rounded_1c_thin">
                                            </TextView>
                                        </LinearLayout>

                                        <Space
                                            android:layout_width="16dp"
                                            android:layout_height="wrap_content" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:gravity="center">
                                            <ImageButton
                                                android:id="@+id/button_pacient_3"
                                                android:layout_width="50dp"
                                                android:layout_height="50dp"
                                                android:background="@drawable/pacient_button1"
                                                android:contentDescription="@string/pacient_1"
                                                android:src="@drawable/bg_pacient_outline"
                                                app:tint="@color/gray" />
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Pedro"
                                                android:textColor="@color/white"
                                                android:fontFamily="@font/m_plus_rounded_1c_thin">
                                            </TextView>
                                        </LinearLayout>

                                        <Space
                                            android:layout_width="16dp"
                                            android:layout_height="wrap_content" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:gravity="center">
                                            <ImageButton
                                                android:id="@+id/button_pacient_4"
                                                android:layout_width="50dp"
                                                android:layout_height="50dp"
                                                android:background="@drawable/pacient_button1"
                                                android:contentDescription="@string/pacient_1"
                                                android:src="@drawable/bg_pacient_outline"
                                                app:tint="@color/gray" />
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Lucas"
                                                android:textColor="@color/white"
                                                android:fontFamily="@font/m_plus_rounded_1c_thin">
                                            </TextView>
                                        </LinearLayout>

                                        <Space
                                            android:layout_width="16dp"
                                            android:layout_height="wrap_content" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:gravity="center">
                                            <ImageButton
                                                android:id="@+id/button_pacient_5"
                                                android:layout_width="50dp"
                                                android:layout_height="50dp"
                                                android:background="@drawable/pacient_button1"
                                                android:contentDescription="@string/pacient_1"
                                                android:src="@drawable/bg_pacient_outline"
                                                app:tint="@color/gray" />
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Kiria"
                                                android:textColor="@color/white"
                                                android:fontFamily="@font/m_plus_rounded_1c_thin">
                                            </TextView>
                                        </LinearLayout>


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:gravity="center">
                                            <ImageButton
                                                android:id="@+id/button_pacient_6"
                                                android:layout_width="50dp"
                                                android:layout_height="50dp"
                                                android:background="@drawable/pacient_button1"
                                                android:contentDescription="@string/pacient_1"
                                                android:src="@drawable/bg_pacient_outline"
                                                app:tint="@color/gray" />
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Manoel"
                                                android:textColor="@color/white"
                                                android:fontFamily="@font/m_plus_rounded_1c_thin">
                                            </TextView>
                                        </LinearLayout>

                                        <Space
                                            android:layout_width="16dp"
                                            android:layout_height="wrap_content" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:gravity="center">
                                            <ImageButton
                                                android:id="@+id/button_pacient_7"
                                                android:layout_width="50dp"
                                                android:layout_height="50dp"
                                                android:background="@drawable/pacient_button1"
                                                android:contentDescription="@string/pacient_1"
                                                android:src="@drawable/bg_pacient_outline"
                                                app:tint="@color/gray" />
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Gabriela"
                                                android:textColor="@color/white"
                                                android:fontFamily="@font/m_plus_rounded_1c_thin">
                                            </TextView>
                                        </LinearLayout>

                                        <Space
                                            android:layout_width="16dp"
                                            android:layout_height="wrap_content" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:gravity="center">
                                            <ImageButton
                                                android:id="@+id/button_pacient_8"
                                                android:layout_width="50dp"
                                                android:layout_height="50dp"
                                                android:background="@drawable/pacient_button1"
                                                android:contentDescription="@string/pacient_1"
                                                android:src="@drawable/bg_pacient_outline"
                                                app:tint="@color/gray" />
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Eduardo"
                                                android:textColor="@color/white"
                                                android:fontFamily="@font/m_plus_rounded_1c_thin">
                                            </TextView>
                                        </LinearLayout>

                                        <Space
                                            android:layout_width="16dp"
                                            android:layout_height="wrap_content" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:gravity="center">
                                            <ImageButton
                                                android:id="@+id/button_pacient_9"
                                                android:layout_width="50dp"
                                                android:layout_height="50dp"
                                                android:background="@drawable/pacient_button1"
                                                android:contentDescription="@string/pacient_1"
                                                android:src="@drawable/bg_pacient_outline"
                                                app:tint="@color/gray" />
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Luiz"
                                                android:textColor="@color/white"
                                                android:fontFamily="@font/m_plus_rounded_1c_thin">
                                            </TextView>
                                        </LinearLayout>

                                        <Space
                                            android:layout_width="16dp"
                                            android:layout_height="wrap_content" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:gravity="center">
                                            <ImageButton
                                                android:id="@+id/button_pacient_10"
                                                android:layout_width="50dp"
                                                android:layout_height="50dp"
                                                android:background="@drawable/pacient_button1"
                                                android:contentDescription="@string/pacient_1"
                                                android:src="@drawable/bg_pacient_outline"
                                                app:tint="@color/gray" />
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Livia"
                                                android:textColor="@color/white"
                                                android:fontFamily="@font/m_plus_rounded_1c_thin">
                                            </TextView>
                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:fontFamily="@font/m_plus_rounded_1c_thin"
                                    android:paddingTop="4dp"
                                    android:text="@string/pacientes_simultaneos"
                                    android:textColor="#ffffff" />

                                <ImageView
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:layout_gravity="center"
                                    android:contentDescription="@string/fila_de_pacientes" />

                            </eightbitlab.com.blurview.BlurView>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="8dp" />

                            <eightbitlab.com.blurview.BlurView
                                android:id="@+id/glass3"
                                android:layout_width="match_parent"
                                android:layout_height="232dp"
                                android:background="@drawable/bg_container_gradient"
                                android:clipToOutline="true"
                                android:orientation="vertical"
                                android:labelFor="@+id/id">

                                <FisioTracker.Android.OrtoTracker_Graphs.graph_02_dispersal
                                    android:id="@+id/chartView"
                                    android:layout_width="match_parent"
                                    android:layout_height="232dp"
                                    android:layout_gravity="center|bottom"
                                    android:alpha="0.4" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:fontFamily="@font/m_plus_rounded_1c_thin"
                                    android:paddingTop="10dp"
                                    android:text="Grafico Esforço x Tempo:"
                                    android:textColor="#ffffff"
                                    android:visibility="gone" />

                                <ImageView
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/ic_graph"
                                    android:contentDescription="@string/cone_de_gr_ficos"
                                    android:visibility="visible" />

                                <Button
                                    android:id="@+id/button_expand"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_gravity="bottom|end"
                                    android:layout_margin="20dp"
                                    android:layout_marginTop="30dp"
                                    android:background="@drawable/button_bg_expand_shape" />
                            </eightbitlab.com.blurview.BlurView>

                        </LinearLayout>
                    </ScrollView>
                </androidx.cardview.widget.CardView>
            </eightbitlab.com.blurview.BlurView>
        </LinearLayout>
    </FrameLayout>

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/nav"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/transparent"
        amdroid:fitsSystemWindows="true">

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/shape_inferior_nav_banner"
            android:clipChildren="true"
            android:fitsSystemWindows="true"
            android:overScrollMode="never"
            app:headerLayout="@layout/nav_header"
            app:insetForeground="@null"
            app:itemIconSize="28dp"
            app:menu="@menu/drawer_menu" />

    </eightbitlab.com.blurview.BlurView>
</androidx.drawerlayout.widget.DrawerLayout>