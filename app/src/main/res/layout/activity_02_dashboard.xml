<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:amdroid="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#101010">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="785dp"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:clipChildren="true"
                android:clipToOutline="true"
                app:cardCornerRadius="28dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_rounded_frame"
                    android:clipChildren="true"
                    android:clipToOutline="true"
                    android:elevation="2dp">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottie_login_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/lottie_01_button_animated_gradient" />

                    <Button
                        android:id="@+id/start"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/m_plus_rounded1c_regular"
                        android:text="@string/start"
                        android:textColor="@color/white"
                        android:textSize="32sp"
                        android:visibility="visible" />

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/pause"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/button_bg_inactive_gradient"
                android:clickable="true"
                android:elevation="10dp"
                android:focusable="true"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/button_bg_red_gradient"
                android:clickable="true"
                android:elevation="10dp"
                android:focusable="true"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/ble"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="end"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_bluetooth">

        </Button>

        <Button
            android:id="@+id/menu"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/ic_sidebar_menu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <eightbitlab.com.blurview.BlurView
                android:layout_width="match_parent"
                android:layout_height="678dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                android:background="@drawable/shape_rounded_corner_rectangle"
                android:padding="6dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <eightbitlab.com.blurview.BlurView
                                android:id="@+id/glass"
                                android:layout_width="match_parent"
                                android:layout_height="410dp"
                                android:background="@drawable/bg_gradient"
                                android:clipToOutline="true"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="8dp">

                                    <FisioTracker.Android.OrtoTracker_Graphs.graph_01_speedometer
                                        android:id="@+id/speedView"
                                        android:layout_width="336sp"
                                        android:layout_height="match_parent"
                                        android:elevation="10dp"
                                        app:sv_indicatorColor="@color/cardview_light_background"
                                        app:sv_maxSpeed="30"
                                        app:sv_minSpeed="0"
                                        app:sv_speedTextColor="@color/white"
                                        app:sv_speedTextFormat="FLOAT"
                                        app:sv_speedTextSize="40dp"
                                        app:sv_textColor="@color/white"
                                        app:sv_unit="Kg"
                                        app:sv_unitTextColor="@color/white" />

                                    <Button
                                        android:layout_width="156dp"
                                        android:layout_height="156dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/ic_pacient2"
                                        android:elevation="8dp" />

                                </FrameLayout>

                                <Button
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:background="@drawable/button_expand_shape"
                                    android:gravity="bottom"
                                    android:layout_gravity="bottom"
                                    android:layout_marginBottom="20dp"
                                    android:layout_marginLeft="20dp">

                                </Button>

                                <Button
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:background="@drawable/button_rounded_shape"
                                    android:gravity="bottom"
                                    android:layout_gravity="end|bottom"
                                    android:layout_marginBottom="20dp"
                                    android:layout_marginRight="20dp">

                                </Button>

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="1dp"
                                    android:background="#404040"
                                    android:layout_gravity="start|bottom"
                                    android:paddingBottom="200dp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginBottom="45dp">
                                </ImageView>

                                <Button
                                    android:id="@+id/centerButton"
                                    android:layout_width="150dp"
                                    android:layout_height="50dp"
                                    android:background="@drawable/shape_glass_nav_drawer"
                                    android:gravity="center"
                                    android:layout_gravity="center|bottom"
                                    android:layout_marginBottom="20dp"
                                    android:text="Nova Sessão"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white" />

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="1dp"
                                    android:background="#404040"
                                    android:layout_gravity="end|bottom"
                                    android:paddingBottom="200dp"
                                    android:layout_marginEnd="20dp"
                                    android:layout_marginBottom="45dp">
                                </ImageView>

                            </eightbitlab.com.blurview.BlurView>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="8dp" />

                            <eightbitlab.com.blurview.BlurView
                                android:id="@+id/glass2"
                                android:layout_width="match_parent"
                                android:layout_height="170dp"
                                android:layout_gravity="bottom"
                                android:background="@drawable/bg_gradient"
                                android:clipToOutline="true"
                                android:elevation="2sp"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:layout_marginBottom="20dp"
                                        android:paddingTop="35dp">

                                        <Button
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:background="@drawable/pacient_button">

                                        </Button>

                                        <Space
                                            android:layout_width="16dp"
                                            android:layout_height="wrap_content" />

                                        <Button
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:background="@drawable/pacient_button1" />

                                        <Space
                                            android:layout_width="16dp"
                                            android:layout_height="wrap_content" />

                                        <Button
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:background="@drawable/ic_pacient2" />

                                        <Space
                                            android:layout_width="16dp"
                                            android:layout_height="wrap_content" />

                                        <Button
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:background="@drawable/pacient_button3" />

                                        <Space
                                            android:layout_width="16dp"
                                            android:layout_height="wrap_content" />

                                        <Button
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:background="@drawable/pacient_button4" />


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal">

                                        <Button
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:background="@drawable/pacient_button5">

                                        </Button>

                                        <Space
                                            android:layout_width="16dp"
                                            android:layout_height="wrap_content" />

                                        <Button
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:background="@drawable/pacient_button6" />

                                        <Space
                                            android:layout_width="16dp"
                                            android:layout_height="wrap_content" />

                                        <Button
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:background="@drawable/pacient_button7" />

                                        <Space
                                            android:layout_width="16dp"
                                            android:layout_height="wrap_content" />

                                        <Button
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:background="@drawable/pacient_button8" />

                                        <Space
                                            android:layout_width="16dp"
                                            android:layout_height="wrap_content" />

                                        <Button
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:background="@drawable/pacient_button9" />


                                    </LinearLayout>

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:fontFamily="@font/m_plus_rounded_1c_thin"
                                    android:paddingTop="4dp"
                                    android:text="@string/pacientes_simultaneos"
                                    android:textColor="#ffffff" />

                                <ImageView
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:layout_gravity="center"
                                    android:contentDescription="@string/fila_de_pacientes" />

                                <Button
                                    android:id="@+id/luisaButton"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_gravity="bottom|end"
                                    android:layout_margin="12dp"
                                    android:layout_marginTop="30dp"
                                    android:background="@drawable/button_expand_shape"
                                    android:elevation="2dp"
                                    android:visibility="invisible" />

                            </eightbitlab.com.blurview.BlurView>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="8dp" />

                            <eightbitlab.com.blurview.BlurView
                                android:id="@+id/glass3"
                                android:layout_width="match_parent"
                                android:layout_height="232dp"
                                android:layout_gravity="bottom"
                                android:background="@drawable/bg_gradient"
                                android:clipToOutline="true"
                                android:elevation="2sp"
                                android:orientation="vertical">

                                <FisioTracker.Android.OrtoTracker_Graphs.graph_02_dispersal
                                    android:id="@+id/chartView"
                                    android:layout_width="385dp"
                                    android:layout_height="265dp"
                                    android:layout_gravity="center"
                                    android:alpha="1.0" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:fontFamily="@font/m_plus_rounded_1c_thin"
                                    android:paddingTop="34dp"
                                    android:text="@string/sem_hist_rico_do_pacientes"
                                    android:textColor="#ffffff"
                                    android:visibility="invisible"/>

                                <ImageView
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/ic_graph"
                                    android:contentDescription="@string/cone_de_gr_ficos"
                                    android:visibility="invisible"/>

                                <Button
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_gravity="bottom|end"
                                    android:layout_margin="12dp"
                                    android:layout_marginTop="30dp"
                                    android:background="@drawable/button_expand_shape"
                                    android:elevation="2dp" />
                            </eightbitlab.com.blurview.BlurView>

                        </LinearLayout>
                    </ScrollView>
                </androidx.cardview.widget.CardView>
            </eightbitlab.com.blurview.BlurView>
        </LinearLayout>
    </FrameLayout>

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/nav"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/transparent"
        amdroid:fitsSystemWindows="true">

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/shape_inferior_nav_banner"
            android:clipChildren="true"
            android:fitsSystemWindows="true"
            android:overScrollMode="never"
            app:headerLayout="@layout/nav_header"
            app:insetForeground="@null"
            app:itemIconSize="28dp"
            app:menu="@menu/drawer_menu" />

    </eightbitlab.com.blurview.BlurView>
</androidx.drawerlayout.widget.DrawerLayout>