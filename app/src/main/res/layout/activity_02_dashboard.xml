<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#101010">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="785dp"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="22dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/rounded_frame"
                    android:elevation="2dp">
                    
                    <Button
                        android:id="@+id/start"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_gradient_button"
                        android:fontFamily="@font/m_plus_rounded1c_regular"
                        android:stateListAnimator="@animator/scale_animation"
                        android:text="@string/start"
                        android:textColor="@color/white"
                        android:textSize="32sp"
                        android:visibility="visible" />

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/pause"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_inactive_gradient_button"
                android:clickable="true"
                android:elevation="10dp"
                android:focusable="true"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_red_gradient_button"
                android:clickable="true"
                android:elevation="10dp"
                android:focusable="true"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/ble"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="end"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_ble">

        </Button>

        <Button
            android:id="@+id/menu"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/ic_sidebar_menu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            app:cardElevation="10dp">

            <eightbitlab.com.blurview.BlurView
                android:id="@+id/glass"
                android:layout_width="match_parent"
                android:layout_height="678dp"
                android:background="@drawable/shape_rounded_corner_rectangle"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                android:padding="6dp"
                android:requiresFadingEdge="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="28dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:padding="10dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:scrollbars="none"
                    android:elevation="2sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#191919">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="420dp"
                            android:background="@drawable/shape_rounded_corner_field"
                            android:orientation="vertical"
                            android:elevation="2sp">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="8dp">

                                <com.example.fisiotracker.ft_graphs.graph_01_speedometer
                                    android:id="@+id/speedView"
                                    android:layout_width="336sp"
                                    android:layout_height="match_parent"
                                    android:elevation="10dp"
                                    app:sv_indicatorColor="@color/cardview_light_background"
                                    app:sv_maxSpeed="30"
                                    app:sv_minSpeed="0"
                                    app:sv_speedTextColor="@color/white"
                                    app:sv_speedTextFormat="FLOAT"
                                    app:sv_speedTextSize="40dp"
                                    app:sv_textColor="@color/white"
                                    app:sv_unit="Kg"
                                    app:sv_unitTextColor="@color/white" />

                                <Button
                                    android:id="@+id/centerButton"
                                    android:layout_width="126dp"
                                    android:layout_height="126dp"

                                    android:layout_gravity="center"
                                    android:background="@drawable/ic_pacient_file"
                                    android:elevation="8dp" />

                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="52sp"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="12sp"
                                android:background="@drawable/shape_text_field"
                                android:elevation="2sp">

                                <TextView
                                    android:id="@+id/dialog_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/m_plus_rounded1c_regular"
                                    android:gravity="center"
                                    android:text="                   Selecione um DACO"
                                    android:textColor="#fff"
                                    android:textSize="18sp" />

                                <Button
                                    android:id="@+id/menuicon"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:background="@drawable/ic_arrow"
                                    android:contentDescription="@string/menu" />

                            </LinearLayout>

                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="8dp">
                        </Space>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/shape_rounded_corner_field"
                            android:elevation="2sp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/m_plus_rounded1c_regular"
                                android:paddingTop="4dp"
                                android:text="@string/pacientes_simultaneos"
                                android:textColor="#959595" />

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_bed"
                                android:contentDescription="@string/fila_de_pacientes" />

                            <Button
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="bottom|end"
                                android:layout_margin="12dp"
                                android:layout_marginTop="30dp"
                                android:background="@drawable/ic_expand_shape"
                                android:elevation="2dp" />

                        </FrameLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="8dp">
                        </Space>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="232dp"
                            android:layout_gravity="bottom"

                            android:background="@drawable/shape_rounded_corner_field"
                            android:elevation="2sp"
                            android:orientation="vertical">

                            <com.example.fisiotracker.ft_graphs.graph_02_dispersal
                                android:id="@+id/chartView"
                                android:layout_width="match_parent"
                                android:layout_height="232dp"
                                android:layout_gravity="center"
                                android:alpha="0.5" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/m_plus_rounded1c_regular"
                                android:paddingTop="34dp"
                                android:text="@string/sem_hist_rico_do_pacientes"
                                android:textColor="#909090" />

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_graph"
                                android:contentDescription="@string/cone_de_gr_ficos" />

                            <Button
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="bottom|end"
                                android:layout_margin="12dp"
                                android:layout_marginTop="30dp"
                                android:background="@drawable/ic_edit_shape"
                                android:elevation="2dp" />
                        </FrameLayout>

                    </LinearLayout>
                </ScrollView>
                </androidx.cardview.widget.CardView>
            </eightbitlab.com.blurview.BlurView>
        </LinearLayout>
    </FrameLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/shape_inferior_nav_banner"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>