<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fisio_tracker_activities.fragment_01_login">

    <eightbitlab.com.blurview.BlurView
    android:id="@+id/glass"
    android:layout_width="match_parent"
    android:layout_height="642dp"
    android:background="@drawable/shape_rounded_corner_rectangle"
    android:gravity="center"
    android:clipToOutline="true"
    android:paddingStart="12dp"
    android:paddingEnd="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:paddingBottom="70dp"
            android:textColor="@color/white"
            android:textSize="85dp">

        </TextView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="62dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shape_text_field"
                android:hint="Nome:"
                android:fontFamily="@font/m_plus_rounded1c_regular"
                android:paddingStart="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:paddingEnd="52dp"
                android:textSize="20sp"
                tools:ignore="Autofill,RtlSymmetry,TextFields" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_email"
                android:layout_gravity="center|end"
                android:layout_margin="16dp"
                android:elevation="4dp"
                tools:ignore="ContentDescription">
            </ImageView>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="62dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shape_text_field"
                android:hint="@string/email"
                android:fontFamily="@font/m_plus_rounded1c_regular"
                android:paddingStart="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:paddingEnd="52dp"
                android:textSize="20sp"
                tools:ignore="Autofill,RtlSymmetry,TextFields" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_email"
                android:layout_gravity="center|end"
                android:layout_margin="16dp"
                android:elevation="4dp"
                tools:ignore="ContentDescription">
            </ImageView>

        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="23dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints=""
                android:background="@drawable/shape_text_field"
                android:hint="@string/senha"
                android:fontFamily="@font/m_plus_rounded1c_regular"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="50dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_password"
                android:layout_gravity="center|end"
                android:layout_margin="16dp"
                android:elevation="4dp"
                tools:ignore="ContentDescription">
            </ImageView>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="23dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints=""
                android:background="@drawable/shape_text_field"
                android:hint="Confirmar Senha:"
                android:fontFamily="@font/m_plus_rounded1c_regular"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="50dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_password"
                android:layout_gravity="center|end"
                android:layout_margin="16dp"
                android:elevation="4dp"
                tools:ignore="ContentDescription">
            </ImageView>
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp">
            <RadioButton
                android:id="@+id/checkBoxExample"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:checked="false"
                android:layout_marginEnd="12dp"
                android:text="Permanecer conectado"
                android:fontFamily="@font/m_plus_rounded1c_regular"
                android:textColor="@color/white" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="42dp"
            app:cardElevation="0dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/rounded_frame"
                android:elevation="2dp">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottie_login_backg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/lottie_01_button_animated_gradient" />

                <Button
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/m_plus_rounded1c_regular"
                    android:stateListAnimator="@animator/scale_animation"
                    android:text="SignUp"
                    android:textAllCaps="false"
                    android:visibility="visible"
                    android:textColor="@color/white"
                    android:textSize="32sp" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp">

            <View
                android:layout_width="105dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_auth_screen_separate_line">
            </View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:gravity="center_horizontal"
                android:text="or SignUp with"
                android:fontFamily="@font/m_plus_rounded1c_regular"

                android:textColor="#606060">
            </TextView>

            <View
                android:layout_width="105dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_auth_screen_separate_line">
            </View>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="08dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:elevation="2dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/android_dark_rd_na" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:elevation="2dp"
                android:background="@drawable/github_mark_white" />

        </LinearLayout>
    </LinearLayout>
</eightbitlab.com.blurview.BlurView>
</FrameLayout>